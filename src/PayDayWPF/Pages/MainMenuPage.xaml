<Page x:Class="PayDayWPF.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PayDayWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="addButton" Content="Add" Grid.Column="0" FontFamily="Segoe UI Black" FontSize="22" Click="OnAdd"/>
        <Button x:Name="markButton" Content="Mark" Grid.Column="1" FontFamily="Segoe UI Black" FontSize="22" Click="OnMark"/>
        <Button x:Name="remainingButton" Content="Remaining" Grid.Column="2" FontFamily="Segoe UI Black" FontSize="22" Click="OnRemaining"/>
        <Button x:Name="statisticsButton" Content="Statistics" Grid.Column="3" FontFamily="Segoe UI Black" FontSize="22" Click="OnStatistics"/>
        <Button x:Name="quitButton" Content="Quit" Grid.Column="4" FontFamily="Segoe UI Black" FontSize="22" Click="OnQuit"/>
    </Grid>
</Page>
